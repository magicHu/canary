<%= simple_form_for @banner, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :title %>
  <%= f.input :desc, :as => :text, :input_html => { :rows => 6 } %>
  <%= f.input :link %>
  <%= f.input :link_text %>

  <%= f.simple_fields_for :attachment do |a| %>
    <%= a.input :attach, :as => :file %>
  <% end %>

  <%= image_tag @banner.attachment.attach.thumb if @banner.attachment.attach %>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                banners_path, :class => 'btn' %>
  </div>
<% end %>