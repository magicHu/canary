
    <div id="comments" style="margin-top: 10px;">
        <!-- 点评列表  Start -->
      <div class="tabbable">
        <ul class="nav nav-tabs">
          <li class="active"><a href="#room-comments" data-toggle="tab">入住点评</a></li>
        </ul>
        <div class="tab-content">
          <div class="tab-pane active" id="room-comments">
              <% @room.comments.each do |comment| %>
                  <div class="alert"><%= comment.comment %></div>
                </div>
              <% end %>

              <%= simple_form_for @comment, :html => { :class => 'form-horizontal' } do |f| %>
                <%= f.input :commentable_id, :as => :hidden, :value => @room.id %>
                <%= f.input :commentable_type, :as => :hidden, :value => 'Room' %> 
                <%= f.input :title %>
                <%= f.input :comment, :as => :text, :input_html => { :rows => 6} %>
                
                <div class="form-actions">
                  <%= f.button :submit, :class => 'btn-primary' %>
                </div>
              <% end %>
          </div>
        </div>
      <!-- 点评列表  End -->
    </div>